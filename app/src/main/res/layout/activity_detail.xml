<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/IVfotoDetail"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        tools:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        />

    <TextView
        android:id="@+id/TVnombreDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="Nombre"
        app:layout_constraintTop_toBottomOf="@id/IVfotoDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/TVDirecionDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="Direccion"
        app:layout_constraintTop_toBottomOf="@id/TVnombreDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/TVEmailDetail"
        android:drawableTop="@drawable/baseline_location_on_24"
        android:drawableTint="@color/white"

        />

    <TextView
        android:id="@+id/TVEmailDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="direccion@email.com"
        app:layout_constraintTop_toBottomOf="@id/TVDirecionDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/TVPhoneDetail"
        android:drawableTop="@drawable/baseline_email_24"
        android:drawableTint="@color/white"

        />
    <TextView
        android:id="@+id/TVPhoneDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="+54-11-1231-1231"
        app:layout_constraintTop_toBottomOf="@id/TVEmailDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:drawableTop="@drawable/baseline_phone_24"
        android:drawableTint="@color/white"

        />


</androidx.constraintlayout.widget.ConstraintLayout>